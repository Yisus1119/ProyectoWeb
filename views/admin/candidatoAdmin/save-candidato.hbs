  <body>

    <div class="container">

<main>

  <div class="card">
    <div class="card-header bg-dark text-white">
     Crear Candidato
    </div>
    <div class="card-body">

       <form method="POST" action="">


        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre:</label>
          <input type="text" class="form-control" id="nombre" name="Nombre" value="" />
        </div>

        <div class="mb-3">
          <label for="apellido" class="form-label">Apellido:</label>
          <input type="text" class="form-control" id="apellido" name="Apellido" value="" />
        </div>     

        <div class="mb-3">
          <label for="fotoPerfil" class="form-label">Foto:</label>
          <input type="text" class="form-control" id="fotoPerfil" name="FotoPerfil" value="" />
        </div>  

        <div class="mb-3">
            <label for="partidoPerteneciente" class="form-label">Partido: </label>
            <select class="form-select" id="partidoPerteneciente" name="PartidoPerteneciente">
              <option selected>Seleccione una opcion</option>

                  <option  value="PLD">PLD</option>
                  
                  <option value="PRM">PRM</option>               
                        
            </select>
        </div>

         <div class="mb-3">
            <label for="puesto" class="form-label">Puesto: </label>
            <select class="form-select" id="puesto" name="Puesto">
              <option selected>Seleccione una opcion</option>

                  <option  value="Presidente">Presidente</option>
                  
                  <option value="Alcalde">Alcalde</option>
                      
              
            </select>
        </div>

                <div class="mb-3">
            <label for="estado" class="form-label">Estado: </label>
            <select class="form-select" id="estado" name="Estado">
              <option selected>Seleccione una opcion</option>

                  <option  value="Activo">Activo</option>
                  
                  <option value="Inactivo">Inactivo</option>
                 
                 
           
              
            </select>
        </div>

         <button type="submit" class="btn btn-primary">Add</button>
          <a href="" type="button" class="btn btn-primary">Back</a>
         </form>  
    </div>
  </div>

</main>

    </div>

