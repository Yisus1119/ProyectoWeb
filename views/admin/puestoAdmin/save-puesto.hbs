<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Puestos</title>
    <link rel="stylesheet" href="/assets/css/bootstrap/bootstrap.min.css" />
  </head>
  <body>

    <div class="container">

<main>

  <div class="card">
    <div class="card-header bg-dark text-white">
     {{#if editMode}}Edicion{{else}}Creacion{{/if}} de puestos
    </div>
    <div class="card-body">

       <form method="POST" action="{{#if editMode}}/edit-puestos{{else}}/create-puestos{{/if}}">
        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre:</label>
          <input type="text" class="form-control" id="nombre" name="Nombre" value="{{#if editMode}}{{puesto.Nombre}}{{/if}}"/>
        </div>

        <div class="mb-3">
          <label for="descripcion" class="form-label">Descripcion:</label>
          <input type="text" class="form-control" id="descripcion" name="Descripcion" value="{{#if editMode}}{{puesto.Descripcion}}{{/if}}" />
        </div>    

                    <div class="mb-3">
              <label for="estado" class="form-label">Estado: </label>
              <select class="form-select" id="estado" name="Estado">
                <option {{#if editMode}}{{else}}selected{{/if}}>Seleccione una opcion</option>

                <option value="Activo">Activo</option>

                <option value="Inactivo">Inactivo</option>

              </select>
            </div>    

            
          {{#if editMode}}

          <input type="hidden" name="puestoId" value="{{puesto.Id}}">
          
          {{/if}}

         <button type="submit" class="btn btn-primary">{{#if editMode}}Edit{{else}}Add{{/if}}</button>
          <a href="/puestos" type="button" class="btn btn-primary">Back</a>
         </form>  
    </div>
  </div>

</main>

    </div>

        <script src="/assets/js/bootstrap/bootstrap.js"></script>
    <script
  src="https://code.jquery.com/jquery-3.6.0.min.js"
  integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
  crossorigin="anonymous"></script>


  </body>
</html>