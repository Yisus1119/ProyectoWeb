<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Puestos</title>
    <link rel="stylesheet" href="/assets/css/bootstrap/bootstrap.min.css" />
  </head>
  <body>

    <div class="container">

<main>

  <div class="card">
    <div class="card-header bg-dark text-white">
      {{#if editMode}}Edicion{{else}}Creacion{{/if}} de ciudadanos
    </div>
    <div class="card-body">

       <form method="POST" action="{{#if editMode}}/edit-ciudadanos{{else}}/create-ciudadanos{{/if}}">

        <div class="mb-3">
          <label for="documentoIdentidad" class="form-label">Cedula:</label>
          <input type="text" class="form-control" id="documentoIdentidad" name="DocumentoIdentidad" 
          value="{{#if editMode}}{{ciudadano.DocumentoIdentidad}}{{/if}}" />
        </div>

        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre:</label>
          <input type="text" class="form-control" id="nombre" name="Nombre" 
          value="{{#if editMode}}{{ciudadano.Nombre}}{{/if}}" />
        </div>

        <div class="mb-3">
          <label for="apellido" class="form-label">Apellido:</label>
          <input type="text" class="form-control" id="apellido" name="Apellido"
           value="{{#if editMode}}{{ciudadano.Apellido}}{{/if}}" />
        </div>     

        <div class="mb-3">
          <label for="email" class="form-label">Email:</label>
          <input type="text" class="form-control" id="email" name="Email" 
          value="{{#if editMode}}{{ciudadano.Email}}{{/if}}" />
        </div>  

        <div class="mb-3">
            <label for="estado" class="form-label">Estado: </label>
            <select class="form-select" id="estado" name="Estado">
              <option selected>Seleccione una opcion</option>

                  <option selected value="Activo">Activo</option>
                  
                  <option value="Inactivo">Inactivo</option>
                 
                 
           
              
            </select>
        </div>
       {{#if editMode}}

            <input type="hidden" name="ciudadanoId" value="{{ciudadano.DocumentoIdentidad}}">

            {{/if}}
         <button type="submit" class="btn btn-primary">Add</button>
          <a href="/ciudadanos" type="button" class="btn btn-primary">Back</a>
         </form>  
    </div>
  </div>

</main>

    </div>

        <script src="/assets/js/bootstrap/bootstrap.js"></script>
    <script
  src="https://code.jquery.com/jquery-3.6.0.min.js"
  integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
  crossorigin="anonymous"></script>


  </body>
</html>